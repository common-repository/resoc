<div class="container" dir={{ textDirection }}>
  <div class="side">
    <div class="side-content">
      <h1 id="title">
        {{ title }}
      </h1>
    </div>
    <div class="footer">
      <img class="logo" src="{{ logoUrl }}">
      <h4 class="brand-name">
        {{ brandName }}
      </h4>
    </div>
  </div>
  <div class="main">
    <div class="extended-background-rtl"></div>
    <img
      class="main-image"
      src="{{ mainImageUrl }}"
    >
    <div class="extended-background-ltr"></div>
  </div>
</div>

<script src="textFit.js"></script>
<script>
  window.onload = function() {
    textFit(document.getElementById('title'), { maxFontSize: 500, multiLine: true });
  };
</script>
